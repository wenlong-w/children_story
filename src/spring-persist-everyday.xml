<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="byName">

	<bean id="storyDao" class="com.wenyansoft.everyday.ibatis.dao.impl.StoryDaoImpl">
		<property name="ibatisTemplate" ref="ibatisTemplate" />
	</bean>
	
	<bean id="userInfoDao" class="com.wenyansoft.everyday.ibatis.dao.impl.UserInfoDaoImpl">
		<property name="ibatisTemplate" ref="ibatisTemplate" />
	</bean>
	
	<bean id="userCollectDao" class="com.wenyansoft.everyday.ibatis.dao.impl.UserCollectDaoImpl">
		<property name="ibatisTemplate" ref="ibatisTemplate" />
	</bean>
	
	<bean id="diaryDao" class="com.wenyansoft.everyday.ibatis.dao.impl.DiaryDaoImpl">
		<property name="ibatisTemplate" ref="ibatisTemplate" />
	</bean>
	
	<bean id="storyInfoDao" class="com.wenyansoft.everyday.ibatis.dao.impl.StoryInfoDaoImpl">
		<property name="ibatisTemplate" ref="ibatisTemplate" />
	</bean>
	
	<bean id="ibatisTemplate" class="org.springframework.orm.ibatis.SqlMapClientTemplate">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>

	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="sqlMapConfig.xml" />
	</bean>
	<!-- 线上数据源 -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
 		<property name="driverClass" value="com.mysql.jdbc.Driver" ></property>
        <property name="jdbcUrl" value="jdbc:mysql://172.16.0.15:3306/child_story?useSSL=true" ></property> 
        <property name="user" value="uroot" ></property>  
        <property name="password" value="long2018zq" ></property>
	</bean>
